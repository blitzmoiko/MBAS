	<!-- Main -->
	<action name="main" class="com.cityproperties.web.ForwardAction">
		<result>content/main.jsp</result>
	</action>
	
	
	<!-- Login -->
	<action name="login" class="com.cityproperties.web.LoginAction">
		<result name="input">content/login.jsp</result>
		<result type="redirect">main</result>
	</action>


	<!-- Change Password -->
	<action name="changePassword" class="com.cityproperties.web.ChangePasswordAction">
		<result name="input">content/change_password.jsp</result>
		<result type="redirect">main</result>
	</action>


	<!-- Client -->
	<action name="listClient" method="list"
		class="com.cityproperties.web.ClientAction">
		<result>content/manage_client.jsp</result>
	</action>
	
	<action name="validateClient" 
			class="com.cityproperties.web.ClientValidateAction">
		<result name="input">content/manage_client.jsp</result>
		<result>
			<param name="actionName">saveOrUpdateClient</param>
		</result>
	</action>

	<action name="saveOrUpdateClient" method="saveOrUpdate"
		class="com.cityproperties.web.ClientAction">
		<result>content/main.jsp</result>
	</action>

	<action name="editClient" method="edit"
		class="com.cityproperties.web.ClientAction">
		<result>/register.jsp</result>
	</action>

	<action name="deleteClient" method="delete"
		class="com.cityproperties.web.ClientAction">
		<result type="redirect">listClient</result>
	</action>


	<!-- Business Associate -->
	<action name="listBA" method="list"
		class="com.cityproperties.web.BusinessAssociateAction">
		<result>content/manage_ba.jsp</result>
	</action>

	<action name="validateBA" 
			class="com.cityproperties.web.BusinessAssociateValidateAction">
		<result name="input">content/manage_ba.jsp</result>
		<result>
			<param name="actionName">saveOrUpdateBA</param>
		</result>
	</action>
	
	<action name="saveOrUpdateBA" method="saveOrUpdate"
		class="com.cityproperties.web.BusinessAssociateAction">
		<result>content/main.jsp</result>
	</action>

	<action name="editBA" method="edit"
		class="com.cityproperties.web.BusinessAssociateAction">
		<result>/register.jsp</result>
	</action>

	<action name="deleteBA" method="delete"
		class="com.cityproperties.web.BusinessAssociateAction">
		<result type="redirect">listBA</result>
	</action>
		
	</package>

</struts>
