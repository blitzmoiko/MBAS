<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="10.20.30.40" />
        <property name="port" value="25" />
        <property name="username" value="neil.juan@propertiesre.com" />
        <property name="password" value="nj1616" />

        <property name="javaMailProperties">
            <props>
                <prop key="mail.from">neil.juan@propertiesre.com</prop>
                <prop key="mail.smtp.auth">true</prop>
                <prop key="mail.smtp.starttls.enable">true</prop>
                <!-- <prop key="mail.debug">true</prop>
                <prop key="javax.net.debug">all</prop> -->
            </props>
        </property>
    </bean>

    <bean id="fmConfig"
        class="org.springframework.ui.freemarker.FreeMarkerConfigurationFactoryBean"	>
        <property name="preTemplateLoaders" ref="databaseTemplateLoader" />
    </bean>

    <bean name="databaseTemplateLoader"
        class="com.cityproperties.util.email.template.EmailDatabaseTemplateLoader">
        <property name="mailTypeDao" ref="mailTypeDao" />
    </bean>

    <bean id="sendMail" class="com.cityproperties.util.email.SendMail">
        <property name="mailSender" ref="mailSender" />
        <property name="fmConfig" ref="fmConfig" />
    </bean>

</beans>