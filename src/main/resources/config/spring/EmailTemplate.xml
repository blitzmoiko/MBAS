<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="smtp.gmail.com" />
        <property name="port" value="465" />
        <property name="protocol" value="smtps" />
        <property name="username" value="neil.r.juan@gmail.com" />
        <property name="password" value="OMNI7777" />
        <property name="javaMailProperties">
            <props>
                  <prop key="mail.smtps.auth">true</prop>
                  <prop key="mail.smtps.starttls.enable">true</prop>
                  <prop key="mail.smtps.debug">true</prop>
            </props>
        </property>
	</bean>

	<bean id="fmConfig"
		class="org.springframework.ui.freemarker.FreeMarkerConfigurationFactoryBean"	>
		<property name="preTemplateLoaders" ref="databaseTemplateLoader" />
	</bean>
	
	<bean name="databaseTemplateLoader" 
		class="com.cityproperties.util.email.template.EmailDatabaseTemplateLoader">
		<property name="mailTypeDao" ref="mailTypeDao" />
	</bean>

	<bean id="sendMail" class="com.cityproperties.util.email.SendMail">
		<property name="mailSender" ref="mailSender" />
		<property name="fmConfig" ref="fmConfig" />
	</bean>

</beans>